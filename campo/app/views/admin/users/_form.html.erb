<%= form_with model: [:admin, @user], class: 'form', id: 'user-form', data: { controller: 'form-validation', remote: true } do |form| %>
  <div class="form-field <%= 'invalid' if @user.errors[:name].any? %>">
    <%= form.label :name %>
    <%= form.text_field :name, 'data-validate-url': '/users/validate/name' %>
    <% if @user.errors[:name].any? %>
      <div class="validate-message">
        <%= @user.errors[:name].first %>
      </div>
    <% end %>
  </div>
  <div class="form-field <%= 'invalid' if @user.errors[:username].any? %>">
    <%= form.label :username %>
    <%= form.text_field :username, 'data-validate-url': '/users/validate/username' %>
    <% if @user.errors[:username].any? %>
      <div class="validate-message">
        <%= @user.errors[:username].first %>
      </div>
    <% end %>
  </div>
  <div class="form-field <%= 'invalid' if @user.errors[:email].any? %>">
    <%= form.label :email %>
    <%= form.text_field :email, 'data-validate-url': '/users/validate/email' %>
    <% if @user.errors[:email].any? %>
      <div class="validate-message">
        <%= @user.errors[:email].first %>
      </div>
    <% end %>
  </div>
  <div class="form-field <%= 'invalid' if @user.errors[:password].any? %>">
    <%= form.label :password %>
    <%= form.password_field :password, 'data-validate-url': '/users/validate/name' %>
    <% if @user.errors[:password].any? %>
      <div class="validate-message">
        <%= @user.errors[:password].first %>
      </div>
    <% end %>
  </div>
  <div class="form-field <%= 'invalid' if @user.errors[:bio].any? %>">
    <%= form.label :bio %>
    <%= form.text_field :bio %>
    <div class="validate-message">
      <%= @user.errors[:bio].first %>
    </div>
  </div>
  <div class="form-field <%= 'invalid' if @user.errors[:role].any? %>">
    <%= form.label :role %>
    <%= form.select :role, User.roles.keys %>
    <div class="validate-message">
      <%= @user.errors[:role].first %>
    </div>
  </div>
  <%= form.submit class: 'button button-contained button-primary' %>
<% end %>
