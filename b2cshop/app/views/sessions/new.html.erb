<div class="my-5 py-10 flex justify-center items-center">
  <div class="flex flex-col justify-center items-center w-1/3">
    <h1 class="text-2xl tracking-widest">登陆</h1>
    <%= form_with url: login_path, scope: :session, local: true, class: 'w-full' do |f| %>
      <div class="my-4">
        <div class="my-2 text-gray-700">
          <%= f.label :email, '邮箱或者手机号' %>
        </div>
        <div class="my-2">
          <%= f.email_field :email, class: 'w-full' %>
        </div>
      </div>

      <div class="my-4">
        <div class="my-2 text-gray-700">
          <%= f.label :password, '密码' %>
        </div>
        <div class="my-2">
          <%= f.password_field :password, class: 'w-full' %>
        </div>
      </div>

      <div class="my-4">
        <div class="my-2">
          <div class="flex justify-between">
            <a class="text-blue-600 hover:text-blue-400 cursor-pointer" href="#">注册</a>
            <%= f.label :remember_me, class: "flex items-center" do %>
              <%= f.check_box :remember_me %>
              <span class="ml-2 cursor-pointer">记住我</span>
            <% end %>
          </div>

        </div>
      </div>

      <div class="my-4">
        <%= f.submit '登录', class: 'my-2 cursor-pointer text-white bg-blue-600 py-4 w-full tracking-widest hover:text-blue-100' %>
      </div>
    <% end %>
  </div>
</div>